{
    "private": true,
    "name": "remix-app-template",
    "description": "",
    "license": "",
    "scripts": {
        "build": "yarn build:sass && yarn build:tailwind && remix build",
        "dev": "concurrently \"yarn watch:sass\" \"yarn watch:tailwind\" \"remix dev\"",
        "postinstall": "remix setup node",
        "build:sass": "sass ./app/scss/index.scss ./app/css/index.css",
        "watch:sass": "sass ./app/scss/index.scss ./app/css/index.css -w",
        "watch:tailwind": "npx tailwindcss -i ./app/tailwind/index.css -o ./app/css/tailwind.css --watch",
        "build:tailwind": "tailwindcss -i ./app/tailwind/index.css -o ./app/css/tailwind.css"
    },
    "dependencies": {
        "@prisma/client": "3.7.0",
        "@remix-run/react": "^1.1.1",
        "@remix-run/serve": "^1.1.1",
        "@remix-run/vercel": "^1.1.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "remix": "^1.1.1"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.1.1",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "concurrently": "^6.5.1",
        "prisma": "^3.7.0",
        "sass": "^1.45.1",
        "tailwindcss": "^3.0.8",
        "typescript": "^4.1.2"
    },
    "engines": {
        "node": ">=14"
    },
    "sideEffects": false
}
